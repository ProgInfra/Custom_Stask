{
    "name": "custom-stack",
    "version": "1.0.0",
    "description": "Custom Stack ideas and OneClickApp Repository for CapRover",
    "scripts": {
        "formatter": "prettier --check \"./src/**/*.(json|yml)\"",
        "formatter-write": "prettier --write \"./src/**/*.(json|yml)\"",
        "build": "rm -rf ./dist/ && mkdir -p dist && node ./scripts/build_one_click_apps.js && node ./scripts/build_one_click_apps_from_v4.js",
        "validate_apps": "node ./scripts/validate_apps.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/proginfra/custom_stask.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://gitlab.com/proginfra/custom_stask/-/issues"
    },
    "homepage": "https://gitlab.com/proginfra/custom_stask",
    "dependencies": {
        "fs-extra": "^9.0.1",
        "prettier": "^2.0.5",
        "yaml": "^1.10.0"
    }
}